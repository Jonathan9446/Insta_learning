# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=false

# Server Configuration
PORT=5000
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google AI Studio (Gemini)
GEMINI_API_KEY=your-google-ai-studio-api-key-here

# OpenRouter
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxx

# Groq API (for Whisper transcription)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxx

# Firebase Configuration
FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXX
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# YouTube Processing
PIPED_INSTANCE_1=https://pipedapi.kavin.rocks
PIPED_INSTANCE_2=https://pipedapi-libre.kavin.rocks
PIPED_INSTANCE_3=https://watchapi.whatever.social

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_VIDEO_DURATION=72000
MAX_CONCURRENT_PROCESSES=5

# Temporary Storage
TEMP_DIR=./temp_videos
MAX_TEMP_FILE_SIZE=5368709120
CLEANUP_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
